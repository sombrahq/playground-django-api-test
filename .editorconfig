# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# python
[*.py]
indent_style = space
indent_size = 4

# javascript
[{*.js,*.json}]
indent_style = space
indent_size = 2

# yaml
[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
